<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">56215487</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/j2eeproject</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="current_session_context_class">thread</property>
	
	
		<mapping resource = "com/j2ee/pojo/User.hbm.xml"/>
		<mapping resource = "com/j2ee/pojo/Role.hbm.xml"/>
	</session-factory>
	
	
</hibernate-configuration>
